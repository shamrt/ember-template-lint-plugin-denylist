
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "lib",
    "rootDir": "src",

    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,

    "baseUrl": ".",
    "paths": {
      "ember-template-lint-plugin-denylist": ["src/index"],
      "ember-template-lint-plugin-denylist/*": ["src/*"],
      "*": ["types/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["**/node_modules/**"]
}
